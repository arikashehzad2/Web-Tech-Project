<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Scoopy Doo </title>

  <!-- Font Awesome -->
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
  integrity="sha512-pap+YcGfFHTt9H9/yHciB+Hf3BjK6Lzv+gh9b+X+hR0zV4ZwrK6iZ8v1j5Wl+ZrTT3u+2kHmsH4VuN4Dcq4H0g=="
  crossorigin="anonymous"
  referrerpolicy="no-referrer"
/>


  <!-- Admin CSS -->
  <link rel="stylesheet" href="/CSS/admin.css">
</head>
<body class="admin-page">

<header>
  <!-- Hamburger Menu -->
  <input type="checkbox" id="menu-toggle" />
  <label for="menu-toggle" class="menu-button">
    <div></div>
    <div></div>
    <div></div>
  </label>

  <!-- Navigation -->
  <div class="main-nav">
    <ul>
      <!-- Main Pages -->
      <li><a href="/">Home</a></li>
      <li><a href="/menu">Menu</a></li>
      <li><a href="/about">About Us</a></li>

      <!-- Admin Panel with Collapsible Submenu -->
      <li class="has-submenu">
        <a href="#" class="submenu-toggle">Admin Panel â–¾</a>
        <ul class="submenu">
          <li><a href="/admin/dashboard">Dashboard</a></li>
          <li><a href="/admin/products">Product List</a></li>
          <li><a href="/admin/products/add">Add Product</a></li>
        </ul>
      </li>
    </ul>
  </div>

  <!-- Logo -->
  <img src="/images/logo.png" alt="Scoopy Doo Logo" class="logo" />

  <!-- Main Heading -->
  <div class="hero">
    <h1>SCOOPY DOO</h1>
    <hr />
  </div>
</header>

<script>
document.addEventListener("DOMContentLoaded", () => {
  const submenuToggles = document.querySelectorAll('.submenu-toggle');

  submenuToggles.forEach(toggle => {
    toggle.addEventListener('click', function(e) {
      e.preventDefault(); // prevents page jump
      const parentLi = this.parentElement;
      parentLi.classList.toggle('open'); // toggles submenu visibility
    });
  });
});
</script>

</body>
</html>
